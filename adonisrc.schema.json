{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "typescript": {
      "description": "Is project written in TypeScript or not",
      "type": "boolean"
    },
    "assetsBundler": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "devServer": {
          "type": "object",
          "properties": {
            "command": { "type": "string" },
            "args": { "type": "array", "items": { "type": "string" } }
          },
          "required": ["command", "args"],
          "additionalProperties": false
        },
        "build": {
          "type": "object",
          "properties": {
            "command": { "type": "string" },
            "args": { "type": "array", "items": { "type": "string" } }
          },
          "required": ["command", "args"],
          "additionalProperties": false
        }
      },
      "required": ["name", "devServer", "build"],
      "additionalProperties": false
    },
    "preloads": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "oneOf": [
          {
            "type": "string"
          },
          {
            "type": "object",
            "properties": {
              "file": { "type": "string" },
              "environment": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": ["web", "console", "test", "repl"]
                }
              }
            },
            "required": ["file"],
            "additionalProperties": false
          }
        ]
      }
    },
    "metaFiles": {
      "type": "array",
      "items": {
        "uniqueItems": true,
        "oneOf": [
          {
            "type": "string"
          },
          {
            "type": "object",
            "properties": {
              "pattern": { "type": "string" },
              "reloadServer": { "type": "boolean" }
            },
            "required": ["pattern"],
            "additionalProperties": false
          }
        ]
      }
    },
    "commands": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "type": "string"
      }
    },
    "providers": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "oneOf": [
          {
            "type": "string"
          },
          {
            "type": "object",
            "properties": {
              "file": { "type": "string" },
              "environment": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": ["web", "console", "test", "repl"]
                }
              }
            },
            "required": ["file"],
            "additionalProperties": false
          }
        ]
      }
    },
    "directories": {
      "type": "object",
      "properties": {
        "config": {
          "type": "string"
        },
        "commands": {
          "type": "string"
        },
        "contracts": {
          "type": "string"
        },
        "public": {
          "type": "string"
        },
        "providers": {
          "type": "string"
        },
        "languageFiles": {
          "type": "string"
        },
        "migrations": {
          "type": "string"
        },
        "seeders": {
          "type": "string"
        },
        "factories": {
          "type": "string"
        },
        "views": {
          "type": "string"
        },
        "start": {
          "type": "string"
        },
        "tmp": {
          "type": "string"
        },
        "tests": {
          "type": "string"
        },
        "httpControllers": {
          "type": "string"
        },
        "models": {
          "type": "string"
        },
        "services": {
          "type": "string"
        },
        "exceptions": {
          "type": "string"
        },
        "mailers": {
          "type": "string"
        },
        "middleware": {
          "type": "string"
        },
        "policies": {
          "type": "string"
        },
        "validators": {
          "type": "string"
        },
        "events": {
          "type": "string"
        },
        "listeners": {
          "type": "string"
        },
        "stubs": {
          "type": "string"
        }
      },
      "additionalProperties": {
        "type": "string"
      }
    },
    "commandsAliases": {
      "type": "object",
      "patternProperties": {
        "^.*$": {
          "type": "string"
        }
      }
    },
    "tests": {
      "type": "object",
      "properties": {
        "suites": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "files": {
                "oneOf": [
                  {
                    "type": "string"
                  },
                  {
                    "type": "array",
                    "uniqueItems": true,
                    "items": {
                      "type": "string"
                    }
                  }
                ]
              },
              "timeout": {
                "type": "number"
              }
            },
            "required": ["name", "files"],
            "additionalProperties": false
          }
        },
        "timeout": {
          "type": "number"
        },
        "forceExit": {
          "type": "boolean"
        }
      },
      "required": ["suites"]
    }
  },
  "required": ["typescript", "providers"]
}
