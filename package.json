{
  "name": "@adonisjs/application",
  "version": "7.0.0-0",
  "description": "AdonisJS application class to read app related data",
  "type": "module",
  "main": "build/index.js",
  "files": [
    "build/adonis-typings",
    "build/src",
    "build/test_factories",
    "build/index.d.ts",
    "build/index.js"
  ],
  "exports": {
    ".": "./build/index.js",
    "./types": "./build/src/types.js",
    "./generators": "./build/src/generators.js",
    "./factories": "./build/test_factories/main.js"
  },
  "scripts": {
    "pretest": "npm run lint",
    "test": "cross-env NODE_DEBUG=adonisjs:app c8 npm run vscode:test",
    "clean": "del-cli build",
    "compile": "npm run lint && npm run clean && tsc",
    "build": "npm run compile",
    "release": "np",
    "version": "npm run build",
    "prepublishOnly": "npm run build",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "sync-labels": "github-label-sync --labels .github/labels.json adonisjs/application",
    "vscode:test": "node --loader=ts-node/esm bin/test.ts"
  },
  "keywords": [
    "adonisjs",
    "app"
  ],
  "author": "virk,adonisjs",
  "license": "MIT",
  "devDependencies": {
    "@adonisjs/config": "^4.2.0-0",
    "@adonisjs/fold": "^9.9.2-0",
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@japa/assert": "^1.3.5",
    "@japa/expect-type": "^1.0.2",
    "@japa/run-failed-tests": "^1.0.8",
    "@japa/runner": "^2.1.1",
    "@japa/spec-reporter": "^1.2.0",
    "@poppinss/dev-utils": "^2.0.3",
    "@swc/core": "^1.3.29",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^18.11.18",
    "@types/pretty-hrtime": "^1.0.1",
    "@types/semver": "^7.3.12",
    "c8": "^7.12.0",
    "cross-env": "^7.0.3",
    "del-cli": "^5.0.0",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-adonis": "^3.0.3",
    "eslint-plugin-prettier": "^4.2.1",
    "github-label-sync": "^2.2.0",
    "husky": "^8.0.3",
    "jsonschema": "^1.4.1",
    "np": "^7.6.3",
    "prettier": "^2.8.3",
    "semver": "^7.3.8",
    "ts-dedent": "^2.2.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@poppinss/hooks": "^7.1.1-0",
    "@poppinss/utils": "^6.5.0-0",
    "front-matter": "^4.0.2",
    "fs-extra": "^11.1.0",
    "tempura": "^0.4.0"
  },
  "peerDependencies": {
    "@adonisjs/config": "^4.2.0-0",
    "@adonisjs/fold": "^9.9.2-0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adonisjs/application.git"
  },
  "bugs": {
    "url": "https://github.com/adonisjs/application/issues"
  },
  "homepage": "https://github.com/adonisjs/application#readme",
  "eslintConfig": {
    "extends": [
      "plugin:adonis/typescriptPackage",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "endOfLine": "auto"
        }
      ]
    }
  },
  "eslintIgnore": [
    "build"
  ],
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "publishConfig": {
    "access": "public",
    "tag": "next"
  },
  "np": {
    "message": "chore(release): %s",
    "tag": "next",
    "branch": "main",
    "anyBranch": false
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  }
}
