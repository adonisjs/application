{
  "name": "@poppinss/application",
  "version": "1.0.3",
  "description": "AdonisJs application class to read app related data",
  "main": "build/index.js",
  "files": [
    "build/src",
    "build/index.d.ts",
    "build/index.js"
  ],
  "scripts": {
    "mrm": "mrm --preset=@adonisjs/mrm-preset",
    "pretest": "npm run lint",
    "test": "node japaFile.js",
    "lint": "tslint --project tsconfig.json",
    "clean": "del build",
    "compile": "npm run lint && npm run clean && tsc",
    "build": "npm run compile && typedoc --theme markdown --excludePrivate --mdHideSources && git add docs",
    "commit": "git-cz",
    "release": "np",
    "version": "npm run build"
  },
  "keywords": [
    "adonisjs",
    "app"
  ],
  "author": "virk,poppinss",
  "license": "MIT",
  "devDependencies": {
    "@adonisjs/fold": "^5.0.9",
    "@adonisjs/mrm-preset": "^2.0.3",
    "@types/node": "^12.0.3",
    "commitizen": "^3.1.1",
    "cz-conventional-changelog": "^2.1.0",
    "del-cli": "^2.0.0",
    "doctoc": "^1.4.0",
    "husky": "^2.3.0",
    "japa": "^2.0.10",
    "mrm": "^1.2.2",
    "np": "^5.0.2",
    "ts-node": "^8.2.0",
    "tslint": "^5.16.0",
    "tslint-eslint-rules": "^5.4.0",
    "typedoc": "^0.14.2",
    "typedoc-plugin-external-module-name": "^2.1.0",
    "typedoc-plugin-markdown": "^2.0.9",
    "typescript": "^3.4.5"
  },
  "nyc": {
    "exclude": [
      "test"
    ],
    "extension": [
      ".ts"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "doctoc README.md --title='## Table of contents' && git add README.md",
      "commit-msg": "node ./node_modules/@adonisjs/mrm-preset/validateCommit/conventional/validate.js"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@poppinss/utils": "^1.0.1",
    "@types/semver": "^6.0.0",
    "semver": "^6.1.1"
  },
  "np": {
    "contents": ".",
    "anyBranch": false
  }
}
